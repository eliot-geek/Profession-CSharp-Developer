<Window x:Class="Less02MoveCursorColor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Less02MoveCursorColor"
        mc:Ignorable="d"
        Title="Move Cursor Color" Height="450" Width="800">
    <Grid>
        <!-- Rectangle element with specified properties -->
        <Rectangle x:Name="Rectangle"
                   Margin="20"
                   Fill="Red"
                   MouseDown="Rectangle_MouseDown"
                   MouseUp="Rectangle_MouseUp"
                   MouseEnter="Rectangle_MouseEnter"
                   MouseLeave="Rectangle_MouseLeave"
                   />
    </Grid>
</Window>
