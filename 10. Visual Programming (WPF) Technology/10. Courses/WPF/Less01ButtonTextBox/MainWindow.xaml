<Window x:Class="Less01ButtonTextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Less01ButtonTextBox"
        mc:Ignorable="d"
        Title="Button TextBox" Height="350" Width="600">
    <Grid>
        <!-- Grid with three rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Grid with no columns defined -->
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>

        <!-- TextBox for user input with specified properties -->
        <TextBox x:Name="TextName"
                 Grid.Row="0"
                 Width="200"
                 TextAlignment="Center"
                 Height="40"
                 Background="YellowGreen"
                 FontSize="20"
                 TextWrapping="Wrap"
                 />

        <!-- Button with specified properties and event handler -->
        <Button Width="200"
                Height="50"
                Content="Button"
                FontSize="20"
                Grid.Row="1"
                Click="Button_Click"
                />
    </Grid>
</Window>
