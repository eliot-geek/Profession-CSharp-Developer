<Window x:Class="Less12TimerBetterWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Less12TimerBetterWPF"
        mc:Ignorable="d"
        Title="{Binding _Time}" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="tbTime" Text="{Binding Time}" FontSize="40" Width="200" Height="100"/>
    </Grid>
</Window>
